#!/usr/bin/env perl

use warnings;
use strict;
use v5.16;

use lib 'lib/';

use Buzzwords::Shuffler;
use Buzzwords::Reader;

binmode STDOUT, ':utf8';

my %buzzwords = get_buzzwords('indiegaming.buzz');

foreach (0..10) {
    my $buzzer = Buzzwords::Shuffler->new( buzzwords => \%buzzwords );

    say $buzzer->content();
}
